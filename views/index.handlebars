<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        {{!-- <h2>Whisper it!</h2> --}}

        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="username">User Name</label>
            <input type="text" id="username" class="form-control bg-light" aria-describedby="username" placeholder="Enter User Name">
          </div>
          {{!-- Make Category As a Drop Down --}}
          <div class="form-group">
            <label for="post-category">Category</label>
            <input type="text" id="post-category" class="form-control bg-light" aria-describedby="post-category">
          </div>
          <div class="form-group">
            <label for="pin">Pin Number</label>
            <input type="number" id="pin" class="form-control bg-light" aria-describedby="pin" placeholder="4~6 Digit Pin# required to delete/update your post">
          </div>
          <div class="form-group">
            <label for="post-category">Title</label>
            <input type="text" id="post-title " class="form-control bg-light" aria-describedby="post-title">
          </div>
          <div class="form-group">
            <label for="post-content">Content</label>
            <textarea type="text" id="post-content" class="form-control bg-light" aria-describedby="post-content" rows="10" placeholder="Enter Content of Your Post"></textarea>
          </div>
          
          <button id="submit" class="btn btn-outline-deep-orange waves-effect rounded">Submit</button>
        </form>

        <h3>Posts:</h3>
        <ul id="posts-list" class="list-group">
          {{#each post}}
          <li data-id="{{this.id}}" class="list-group-item">
            <p>{{this.category}}</p>
            <p>{{this.username}}</p>
            <p>{{this.createdAt}}</p>
            <a href="post/{{this.id}}">{{this.title}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div> 

