{{!-- Original Daniels code --}}


 <div class="container-fluid"> 
  <div class="row"> 
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Post</h5>
          {{!-- SHOULD PIN (PASSWORD OF THE POST) BE INCLUDED IN HERE? --}}
          <p>
            <strong>ID</strong>: {{post.id}}
          </p>
          <p>
            <strong>Username</strong>: {{post.username}}
          </p>
          <p>
            <strong>Category</strong>: {{post.category}}
          </p>
          <p>
            <strong>Created At</strong>: {{post.createdAt}}
          </p>
          <p>
            <strong>Content</strong>: {{post.body}}
          </p>
          <p>
            <strong>Upvotes</strong>: {{example.upvotes}}
          </p>
          <p>
            <strong>Downvotes</strong>: {{post.downvotes}}
          </p>

          <p>
            <strong>Comments</strong>:
            <ul id="comment-list" class="list-group">
              {{#each post.Comments}}
              <li data-id="{{this.id}}" class="list-group-item">
                <p>{{this.body}}</p>
                {{!-- add javascript to require users to input their pin number for the comment to delete comment --}}
                <button class="btn btn-danger float-right delete-comment">ｘ</button>
              </li>
              {{/each}}
            </ul>
          </p>
          <a href="/" class="btn btn-outline-success btn-sm waves-effect rounded-pill"></i>Back to Home</a> 
            {{!-- <a href="/">← Back To Home</a> --}}
        </div>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="col-8 offset-2">
      <h3>Make Comment On Post #</h3>

      <input class="form-control" id="post-id" type="hidden" value="{{post.id}}" disabled> 
      <form class="clearfix mb-4">
        <div class="form-group">
          <label for="username">User Name</label>
          <input type="text" id="username" class="form-control" aria-describedby="username" placeholder="Enter User Name">
        </div>
        <div class="form-group">
          <label for="pin">Pin Number</label>
          <input type="number" id="comment-pin" class="form-control" aria-describedby="comment-pin" placeholder="4~6 Digit Pin# required to delete/update your post">
        </div>
        <div class="form-group">
          <label for="post-content">Content</label>
          <textarea type="text" id="comment-content" class="form-control" aria-describedby="comment-content" placeholder="Enter Comment"></textarea>
        </div>
        
        <button id="submit-comment" class="btn btn-outline-deep-orange waves-effect rounded-pill float-right">Submit</button>
      </form>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
<script src="/js/comment-ajax.js"></script>
